[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>

[color]
  diff = auto
  status = auto
  branch = auto

[core]
  excludesfile = /home/<%= ENV['USER'] %>/.gitignore
  editor = vim
  autocrlf = input

[apply]
  whitespace = nowarn

[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>

[merge]
  tool = meld

[alias]
  ci = commit
  co = checkout
  st = status
  br = branch
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit --date=relative
  llg = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short
  ctags = !.git/hooks/ctags

[diff "odf"]
  textconv=odt2txt

[giggle]
  main-window-maximized = false
  main-window-geometry = 994x739+232+59
  main-window-view = HistoryView
  file-view-vpane-position = 252
  history-view-vpane-position = 433

[init]
  templatedir = ~/.git_template
